datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  notes     Note[]
  folders   Folder[]
  reviews   Review[]
}

model Note {
  id              Int       @id @default(autoincrement())
  user_id         Int
  title           String
  content         String
  folder_id       Int?
  is_pinned       Boolean   @default(false)
  last_accessed_at DateTime  @updatedAt
  content_hash    String?
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  
  user            User      @relation(fields: [user_id], references: [id])
  folder          Folder?   @relation(fields: [folder_id], references: [id])
}

model Folder {
  id        Int      @id @default(autoincrement())
  user_id   Int
  name      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  user      User      @relation(fields: [user_id], references: [id])
  notes     Note[]
}

model Review {
  id           Int       @id @default(autoincrement())
  user_id      Int
  date         DateTime
  content      String
  mood         Int?
  achievements Json?
  improvements Json?
  plans        Json?
  template_id  Int?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  
  user         User      @relation(fields: [user_id], references: [id])
}