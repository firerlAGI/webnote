{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@webnote/shared": ["../shared/src"],
      "@webnote/shared/types": ["../shared/src/types"],
      "@webnote/shared/utils": ["../shared/src/utils"],
      "@webnote/shared/api": ["../shared/src/api"],
      "@webnote/shared/schemas": ["../shared/src/schemas"],
      "@webnote/shared/constants": ["../shared/src/constants"]
    }
  },
  "include": ["src"]
}
